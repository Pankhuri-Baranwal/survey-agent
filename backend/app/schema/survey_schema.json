{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Canonical Survey Schema",
  "type": "object",
  "required": ["title", "language", "questions"],
  "properties": {
    "title": { "type": "string" },
    "language": { "type": "string" },
    "questions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "type", "text"],
        "properties": {
          "id": { "type": "string" },
          "type": { "type": "string" },
          "text": { "type": "string" },
          "options": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    }
  }
}